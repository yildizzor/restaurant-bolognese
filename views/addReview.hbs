<div class="container mt-2">
  <h3 style="color:blue" ;>Add Review</h3>

  <form action="/review/add" class="needs-validation" novalidate method="post">
    <div class="mb-3">
      <label for="name" class="form-label" style="color:blue">Your Name</label>
      <input type="text" class="form-control" id="name" name="name" required />
      <div class="invalid-feedback">
        Please enter your name.
      </div>
    </div>

    <div class="mb-3">
      <label for="rating" class="form-label" style="color:blue">Rating</label>
      <div class="rating-container" id="rating-container">
        <!-- Rating stars will be dynamically added here -->
      </div>
      <input
        type="text"
        style="display: none"
        id="rating"
        name="rating"
        required
      />
      <div class="invalid-feedback">
        Please select a rating.
      </div>
    </div>

    <div class="mb-3">
      <label for="review" class="form-label" style="color:blue">Your Review</label>
      <textarea
        class="form-control"
        id="review"
        rows="4"
        maxlength="300"
        name="review"
        required
      ></textarea>
      <small class="form-text text-muted">Maximum 300 characters</small>
      <div class="invalid-feedback">
        Please enter your review (maximum 300 characters).
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
  </form>
</div>