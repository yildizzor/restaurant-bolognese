<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>

  <body>
    <nav class="navbar navbar-expand-xl" style="background-color: #d3f0f5;">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img
            src="/images/home/logo1.png"
            style="max-height: 16vh; min-height: 10vh;"
            class="d-inline-block align-text-top m2"
            alt="Restaurant Logo"
          />
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">

          <ul class="navbar-nav mx-auto fs-3 fst-italic mb-2 mb-lg-0">
            <li class="nav-item px-3"><a
                class="nav-link active"
                style="color: #1c3bd7"
                href="/"
                aria-current="page"
              >Home</a></li>
            <li class="nav-item px-3"><a
                class="nav-link"
                style="color: #1c3bd7"
                href="/about"
              >About Us</a></li>

            <li class="nav-item dropdown px-3">
              <a
                class="nav-link dropdown-toggle"
                data-bs-toggle="dropdown"
                role="button"
                aria-expanded="false"
                style="color: #1c3bd7"
                href="/menu"
              >Menu</a>

              <ul class="dropdown-menu">
                <li><a
                    class="dropdown-item"
                    style="color: #1c3bd7"
                    href="/menu"
                  >Dishes and Drinks</a></li>
                <li><a
                    class="dropdown-item"
                    style="color: #1c3bd7"
                    href="/menu/dishes"
                  >Dishes</a></li>
                <li><a
                    class="dropdown-item"
                    style="color: #1c3bd7"
                    href="/menu/drinks"
                  >Drinks</a></li>
              </ul>

            </li>

            <li class="nav-item px-3"><a
                class="nav-link"
                style="color: #1c3bd7"
                href="/order"
              >Order<i
                  class="fa fa-shopping-cart"
                  style="color:#0f2dd9"
                ></i>{{orderItemsCount}}</a></li>
            <li class="nav-item px-3"><a
                class="nav-link"
                style="color:#1c3bd7"
                href="/reservation"
              >Reservation</a></li>

            <li class="nav-item dropdown px-3">
              <a
                class="nav-link dropdown-toggle"
                data-bs-toggle="dropdown"
                role="button"
                aria-expanded="false"
                style="color: #1c3bd7"
              >Reviews</a>

              <ul class="dropdown-menu">
                <li><a
                    class="dropdown-item"
                    style="color: #1c3bd7"
                    href="/reviews"
                  >Read Reviews</a></li>
                <li><a
                    class="dropdown-item"
                    style="color: #1c3bd7"
                    href="/review/add"
                  >Add Review</a></li>
              </ul>
            </li>
            <li class="nav-item px-3"><a
                class="nav-link"
                style="color: #1c3bd7"
                href="/contact"
              >Contact</a></li>

            {{#if isLoggedOut}}
              <li class="nav-item px-3"><a
                  class="nav-link"
                  style="color:#1c3bd7"
                  href="/signup"
                >Sign up</a></li>

              <li class="nav-item px-3"><a
                  class="nav-link"
                  style="color:#1c3bd7"
                  href="/login"
                >Login</a></li>
            {{/if}}

            {{#if isLoggedIn}}
              <li class="nav-item dropdown px-3">
                <a
                  class="nav-link dropdown-toggle"
                  data-bs-toggle="dropdown"
                  role="button"
                  aria-expanded="false"
                  style="color: #1c3bd7"
                  href="/menu"
                >User</a>
                <ul class="dropdown-menu">
                  <li><a
                      class="dropdown-item"
                      style="color: #1c3bd7"
                      href="/profile"
                    >Profile</a></li>
                  <li><a
                      class="dropdown-item"
                      style="color: #1c3bd7"
                      href="/logout"
                    >Logout</a></li>
                </ul>
              </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>
    {{{body}}}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script src="/js/script.js"></script>
  </body>

</html>